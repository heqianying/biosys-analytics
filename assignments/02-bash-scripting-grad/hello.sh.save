#!/usr/bin/env bash

Greetings=$1
NAME=${2:-Human}

if [[ $# -eq 0 ]]; then 
echo "Usage: hello.sh GREETING [NAME]"
exit 1 

elif [[ $# -gt 2 ]]; then 
echo "Usage: hello.sh GREETING [NAME]" 
exit 1 


elif [[ $2 -eq 0 ]]; then
echo $Greetings,$NAME!
exit 0

elif [[ $# -eq 1 ]]
echo "$Greetings,$NAME!"
exit 0

